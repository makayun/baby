{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"noResolve": false,
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"isolatedModules": false,
		"lib": [
			"dom",
			"es2015.promise",
			"ES6"
		],
		"declaration": true,
		"outDir": "./dist"
	},
	"include": [
		"src"
	]
}
